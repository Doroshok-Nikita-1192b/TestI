@model IEnumerable<TestI.Models.Application>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Application" asp-action="Create" class="btn btn-primary">Create new Application</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <div class=" container overflow-hidden">
            <div class="row">
                @foreach (var obj in Model)
                {<div class="col-6">

                        <div class="card p-3  my-2 border bg-light">
                            <a asp-action="Details" asp-route-Id="@obj.ApplicationId">
                            </a>
                            <div>
                                <section>
                                    <div class="row">
                                        <div class="col-md-8 col-lg-3">
                                            <div class="row">
                                                <aside class="col-sm-6 col-md-12 p-4">
                                                    <img src="~/images/tank.jpg" class="img-thumbnail" alt="...">
                                                </aside>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                            <div class="w-100 btn-group" role="group">
                                @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                                {
                                    <a asp-controller="Tank" asp-action="Update" asp-route-Id="@obj.ApplicationId" class="btn btn-primary mx-1 ">Update</a>
                                }
                                @if (User.IsInRole("admin"))
                                {
                                    <a asp-controller="Tank" asp-action="Delete" asp-route-Id="@obj.ApplicationId" class="btn btn-danger mx-1">Delete</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <p>No tanks created yet</p>
    }

</div>