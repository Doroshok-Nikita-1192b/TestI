@model IEnumerable<TestI.Models.MachineTool>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Machinetool List</h2>
        </div>
        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
        {
            <div class="col-6 text-right">
                <a asp-controller="MachineTool" asp-action="Create" class="btn btn-primary">Create new Machinetool</a>
            </div>
        }
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        MachineToolsName
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var machineTool in Model)
                {
                    <tr>
                        <td width="70%">@machineTool.MachineToolsName</td>
                        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                        {
                            <td width="30%">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="MachineTool" asp-action="Update" asp-route-Id="@machineTool.MachineToolsId" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="MachineTool" asp-action="Delete" asp-route-Id="@machineTool.MachineToolsId" class="btn btn-danger mx-1">Delete</a>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Guides created yet</p>
    }

</div>